{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Interop */
    "esModuleInterop": true,

    /* Outputs */
    "sourceMap": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true
  }
}
